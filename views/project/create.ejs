<!-- Create Project Form -->
<div class="data-container">
    <div class="data-header">
        <h3>Create New Project</h3>
    </div>

    <form action="/projects" method="POST" class="form">
        <div class="form-group">
            <label for="code">Project Code <span class="required-indicator">*</span></label>
            <input
                    type="text"
                    id="code"
                    name="code"
                    class="form-control <%= typeof errors !== 'undefined' && errors.find(err => err.param === 'code') ? 'is-invalid' : '' %>"
                    value="<%= typeof project !== 'undefined' ? project.code : '' %>"
                    required
                    maxlength="20"
                    placeholder="Enter unique project code (e.g., 47290)"
            >
            <% if (typeof errors !== 'undefined' && errors.find(err => err.param === 'code')) { %>
                <div class="invalid-feedback">
                    <%= errors.find(err => err.param === 'code').msg %>
                </div>
            <% } %>
            <small class="form-text text-muted">Unique identifier for the project (e.g., 47290)</small>
        </div>

        <div class="form-group">
            <label for="name">Project Name <span class="required-indicator">*</span></label>
            <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control <%= typeof errors !== 'undefined' && errors.find(err => err.param === 'name') ? 'is-invalid' : '' %>"
                    value="<%= typeof project !== 'undefined' ? project.name : '' %>"
                    required
                    maxlength="100"
                    placeholder="Enter project name"
            >
            <% if (typeof errors !== 'undefined' && errors.find(err => err.param === 'name')) { %>
                <div class="invalid-feedback">
                    <%= errors.find(err => err.param === 'name').msg %>
                </div>
            <% } %>
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" class="form-control">
                <option value="Active" <%= typeof project !== 'undefined' && project.status === 'Active' ? 'selected' : '' %>>Active</option>
                <option value="Inactive" <%= typeof project !== 'undefined' && project.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
            <small class="form-text text-muted">Inactive projects won't be shown in the project selection when creating loads</small>
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input
                    type="text"
                    id="address"
                    name="address"
                    class="form-control"
                    value="<%= typeof project !== 'undefined' ? project.address : '' %>"
                    maxlength="200"
                    placeholder="Enter project address (optional)"
            >
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea
                    id="description"
                    name="description"
                    class="form-control"
                    rows="3"
                    maxlength="500"
                    placeholder="Enter project description (optional)"
            ><%= typeof project !== 'undefined' ? project.description : '' %></textarea>
        </div>

        <div class="button-group">
            <a href="/projects" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Project
            </button>
        </div>
    </form>
</div>

<%- contentFor('styles') %>
<style>
    .required-indicator {
        color: var(--danger-red);
    }

    .invalid-feedback {
        display: block;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 80%;
        color: var(--danger-red);
    }
</style>